<h2>Записаться</h2>
<p>Здесь вы можете записаться к нам</p>

<p><%= @message_visit %></p>

<form action="/visit" method="POST">

  <div class="form-group">

    <label>Ваше имя</label>
    <input type="text" name="username" class="form-control" placeholder="Введите ваше имя" value="<%= @username %>">

  </div>

  <div class="form-group">

    <label>Ваш телефон</label>
    <input type="text" name="phone" class="form-control" placeholder="Введите ваш телефон" value="<%= @phone %>">

  </div>

  <div class="form-group">

    <label>Время и дата</label>
    <input type="text" name="date_time" class="form-control" placeholder="Введите время и дату, на которую хотите прийти"  value="<%= @date_time %>">

  </div>

  <div class="form-group">

    <label>Выберите парикмахера:</label>
    <select class="form-control" name="barber">
      <% @barbers.each do |row| %>
        <option <%= @barber == row['name'] ? 'selected' : '' %>><%= row['name'] %></option>
      <% end %>
    </select>

  </div>

  <div class="form-group">

  	<label>Выберите цвет волос, в который хотите окраситься</label>
    <select id="color" name="color">
	  <option value="#7bd148">Green</option>
	  <option value="#5484ed">Bold blue</option>
	  <option value="#a4bdfc">Blue</option>
	  <option value="#46d6db">Turquoise</option>
	  <option value="#7ae7bf">Light green</option>
	  <option value="#51b749">Bold green</option>
	  <option value="#fbd75b">Yellow</option>
	  <option value="#ffb878">Orange</option>
	  <option value="#ff887c">Red</option>
	  <option value="#dc2127">Bold red</option>
	  <option value="#dbadff">Purple</option>
  	  <option value="#e1e1e1">Gray</option>
	</select>

  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>

</form>

<script type="text/javascript">
	
	$(function() {
		$('#color').simplecolorpicker();
	});

</script>