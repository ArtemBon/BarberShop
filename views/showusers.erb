<h2>Записи пользователей</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Ім'я</th>
			<th>Телефон</th>
			<th>Дата</th>
			<th>Парикмахер</th>
			<th>Колір</th>
		</tr>
	</thead>
	<tbody>
		<% @results.each do |row| %>
			<tr>
				<td><%= row['username'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
			</tr>
		<% end %>
	</tbody>
</table>